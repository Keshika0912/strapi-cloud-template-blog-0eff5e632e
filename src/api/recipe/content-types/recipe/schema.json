{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "singularName": "recipe",
    "pluralName": "recipes",
    "displayName": "Recipe",
    "description": "Recipe content type for storing cooking recipes"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": false,
      "minLength": 1,
      "maxLength": 255
    },
    "cover_Image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "ingredients_array": {
      "type": "component",
      "component": "shared.ingredients",
      "repeatable": true,
      "required": true,
      "min": 1
    },
    "steps": {
      "type": "blocks",
      "required": true,
      "min": 1
    },
    "type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Veg",
        "Non-Veg",
        "Dessert",
        "Cookies",
        "Drinks"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": false
    },
    "description": {
      "type": "text",
      "required": false
    },
    "cooking_time": {
      "type": "integer",
      "required": false,
      "min": 1
    },
    "difficulty": {
      "type": "enumeration",
      "required": false,
      "enum": [
        "Easy",
        "Medium",
        "Hard"
      ]
    }
  }
}
